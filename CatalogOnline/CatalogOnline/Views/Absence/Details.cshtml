    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>AbsenceModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" hidden>
            Id Absence
        </dt>
        <dd class = "col-sm-10" hidden>
